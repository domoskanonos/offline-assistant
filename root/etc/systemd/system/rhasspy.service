[Unit]
Description=Rhasspy
After=syslog.target network.target mosquitto.service

[Service]
Type=simple
WorkingDirectory=/usr/bin
ExecStart=rhasspy --profile de

RestartSec=1
Restart=on-failure

StandardOutput=syslog
StandardError=syslog

SyslogIdentifier=rhasspy

[Install]
WantedBy=multi-user.target
